<div class="main users-index">
  <div class="kohoubi-header">
    <div class="header-logo">ユーザーのじょうほう</div>
    <ul class='user-menu'>
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "user-menu-btn" %></li> 
      <li><%= link_to 'やることをきめる', new_task_path, class: "user-menu-btn" %></li>
    </ul>
  </div>  
  <div class="users-index-contents">
    <div class="users-index-item">
      <div class="user-list">
        <h2 class="name">
          <%= @user.nickname %>
        </h2>
        <div class="user-list-content">
          <div class="user-task-list">
            <div class="user-list-task-title">
              <div class="user-list-task-titlelog">やること</div>
              <div class="user-list-task-titlelog">得点</div>
            </div>
            <ul class="user-daily-tasks">
              <% @tasks.each do |task| %> 
              <li class="user-daily-task">
                <%= task.content %> 
              </li>
              <% end %>   
            </ul>
          </div>
          <div class="user-reward-list">
            <div class="user-list-reward-title">
              <div class="user-list-reward-titlelog">こほうび</div>
              <div class="user-list-reward-titlelog">点数</div>
            </div>
            <ul class="user-weekly-rewards">
              <li class="user-weekly-reward"></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>

<%= render "shared/user_go" %>